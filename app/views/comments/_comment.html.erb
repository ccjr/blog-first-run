<% div_for comment do %>
  <h3>
    <%= comment.name %> &lt;<%= comment.email %>&gt; said:
    <span class='actions'>
      <%= link_to 'Delete', [@article, comment], :confirm => 'Are you sure?', :method => :delete, :remote => true, :complete => "alert(request.status)" %>
    </span>
  </h3>
  <%= comment.body %>
<% end %>
